@model Landlord_project.Data.ResidenceApplication

<form asp-controller="Home" asp-action="RentalApplication" method="POST" class="border p-3 animated slideInUp">
    <div class="form-group row justify-content-center">
        <label asp-for="FirstName" class="col-6 col-form-label"></label>
        <label asp-for="LastName" class="col-6 col-form-label"></label>
        <div class="col-6">
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="col-6">
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row justify-content-center">
        <label asp-for="SocialSecurityNumber" class="col-6 col-form-label"></label>
        <label asp-for="Age" class="col-6 col-form-label"></label>
        <div class="col-6">
            <input asp-for="SocialSecurityNumber" class="form-control" />
            <span asp-validation-for="SocialSecurityNumber" class="text-danger"></span>
        </div>
        <div class="col-6">
            <input asp-for="Age" class="form-control" />
            <span asp-validation-for="Age" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row justify-content-center">
        <label asp-for="Email" class="col-6 col-form-label"></label>
        <label asp-for="Phone" class="col-6 col-form-label"></label>
        <div class="col-6">
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="col-6">
            <input asp-for="Phone" class="form-control" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row justify-content-center">
        <label asp-for="Address" class="col-6 col-form-label"></label>
        <label asp-for="ZipCode" class="col-3 col-form-label"></label>
        <label asp-for="City" class="col-3 col-form-label"></label>
        <div class="col-6">
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="col-3">
            <input asp-for="ZipCode" class="form-control" />
            <span asp-validation-for="ZipCode" class="text-danger"></span>
        </div>
        <div class="col-3">
            <input asp-for="City" class="form-control" />
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row justify-content-center">
        <label asp-for="Salary" class="col-12 col-form-label"></label>
        <div class="col-12">
            <input asp-for="Salary" class="form-control" />
            <span asp-validation-for="Salary" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row justify-content-center">
        <label asp-for="Employer" class="col-12 col-form-label"></label>
        <div class="col-12">
            <input asp-for="Employer" class="form-control" />
            <span asp-validation-for="Employer" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row justify-content-center">
        <label asp-for="CurrentWork" class="col-12 col-form-label"></label>
        <div class="col-12">
            <input asp-for="CurrentWork" class="form-control" />
            <span asp-validation-for="CurrentWork" class="text-danger"></span>
        </div>
    </div>
    Co-tenant
    <div class="form-group row justify-content-center">
        <label asp-for="CurrentLandLord" class="col-6 col-form-label"></label>
        <label asp-for="CurrentLandLordPhone" class="col-6 col-form-label"></label>
        <div class="col-6">
            <input asp-for="CurrentLandLord" class="form-control" />
            <span class="text-danger" asp-validation-for="CurrentLandLord"></span>
        </div>
        <div class="col-6">
            <input asp-for="CurrentLandLordPhone" class="form-control" />
            <span class="text-danger" asp-validation-for="CurrentLandLordPhone"></span>
        </div>
    </div>
    <div class="form-group row justify-content-center">
        <label asp-for="AdditionalText" class="col-12 col-form-label"></label>
        <div class="col-12">
            <input asp-for="AdditionalText" class="form-control" />
            <span class="text-danger" asp-validation-for="AdditionalText"></span>
        </div>
    </div>
    <div class="form-group row justify-content-center">
        <label asp-for="HasPets" class="col-4 col-form-label"></label>
        <label asp-for="IsSmoking" class="col-4 col-form-label"></label>
        <label asp-for="AgreeOnTerms" class="col-4 col-form-label"></label>
        <div class="col-4">
            <input asp-for="HasPets" />
        </div>
        <div class="col-4">
            <input asp-for="IsSmoking" />
        </div>
        <div class="col-4">
            <input asp-for="AgreeOnTerms" />
        </div>
        <div class="col-12 modal-footer mt-3">
            <button type="submit" class="btn btn-primary">Skicka</button>
        </div>
    </div>
</form>
<script src="~/node_modules/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/node_modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>