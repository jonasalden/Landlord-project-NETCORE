@model List<Landlord_project.Models.ResidenceModel>
@{
    ViewData["Title"] = "Bostäder";
}
<div class="row">
    <div class="col-12 mt-3 mb-3">
        <h1 class="display-4 mb-4">
            Lediga hyresobjekt @if (Model.Any())
            {@ViewData["ResidenceCount"]}
        </h1>
        <hr />
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Hem</a></li>
                <li class="breadcrumb-item active" aria-current="page">Hyresledigt</li>
            </ol>
        </nav>
    </div>
    <div class="col-12">

    </div>
    <div class="col-12">
        <div id="rental-list-container" class="row no-gutters">
            @if (Model.Any())
            {
                @foreach (var residence in Model)
                {
                    @await Html.PartialAsync("_ResidenceThumb", residence)
                }
            }
            else
            {
                <div class="col-12">
                    <h1>Finns inga hyresobjekt tillgängliga just nu.</h1>
                </div>
            }
        </div>
    </div>
</div>